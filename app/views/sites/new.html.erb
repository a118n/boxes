<div class="row">
  <div class="col s12">
    <div class="card hoverable">
      <div class="card-content">

        <i class="material-icons left">domain</i>

        <!-- Card title -->
        <span class="card-title">New Site</span>

        <div class="container">

          <%= form_for @site do |f| %>

            <!-- Name -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">text_fields</i>
                <%= f.text_field :name, required: true, autofocus: true %>
                <%= f.label :name %>
              </div>
            </div>

            <!-- Location -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">location_on</i>
                <%= f.text_field :location %>
                <%= f.label :location %>
              </div>
            </div>

            <!-- Description -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">description</i>
                <%= f.text_field :description %>
                <%= f.label :description %>
              </div>
            </div>

            <!-- Buttons -->
            <div class="row">
              <div class="col s12">

                <!-- Create button -->
                <button class="btn waves-effect waves-light">
                  <%= f.submit "Create" %>
                </button>

                <!-- Back button -->
                <%= link_to "Back", :back, class: "btn btn-flat waves-effect waves-light" %>
              </div>
            </div>

          <% end %>

        </div>  <!-- Form container -->

      </div>  <!-- Card content -->

    </div>  <!-- Card -->
  </div>  <!-- Col -->
</div>  <!-- Row -->