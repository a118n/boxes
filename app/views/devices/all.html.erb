<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">

        <i class="material-icons left">print</i>

        <!-- Card title -->
        <span class="card-title">All Devices</span>

        <!-- Dots Dropdown -->
        <a class="dropdown-button right" href="#!" data-activates="dropdown-devices-all" data-constrainwidth="false">
          <i class="material-icons black-text">more_vert</i>
        </a>

        <!-- Dropdown Structure -->
        <ul id="dropdown-devices-all" class="dropdown-content" style="min-width: 150px;">

          <!-- Export button-->
          <li>
            <%= link_to export_devices_path(all: true, format: "csv") do %>
              <i class="material-icons left">import_export</i>
              Export
            <% end %>
          </li>
        </ul>

        <% if @devices.any? %>

          <%= table_for_devices(@devices) %>

        <% else %>
          <h5 style="font-size: 1.3em;">Looks like you have no devices yet.</h5>
        <% end %>

      </div>  <!-- Card content -->
    </div>  <!-- Card -->
  </div>  <!-- Col -->
</div>  <!-- Row -->