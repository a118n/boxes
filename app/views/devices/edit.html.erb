<div class="container center-align">
  <div class="row">
    <div class="col s12">
      <div class="card hoverable">
        <div class="card-content">

          <span class="card-title">
            <i class="material-icons left">print</i>

            <!-- Site name -->
            Edit: <%= @device.name %>
          </span>

          <div class="container">

            <%= form_for @device do |f| %>

              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix">text_fields</i>
                  <%= f.text_field :name %>
                  <%= f.label :name, class: "active" %>
                </div>
              </div>


              <!-- Buttons -->
              <div class="row">
                <div class="col s12">

                  <!-- Update button -->
                  <button class="btn waves-effect waves-light">
                    <%= f.submit "Update" %>
                  </button>

                  <!-- Back button -->
                  <%= link_to "Back", device_path(@device), class: "btn btn-flat waves-effect waves-light" %>
                </div>
              </div>

            <% end %>

          </div>  <!-- Form container -->

          <!-- Delete device button -->
          <div class="row">
            <div class="col s12">
              <%= button_to "Delete device", @device, data: { confirm: "Are you sure? You're about to delete this Device. This action is irreversible." }, method: :delete, class: "btn btn-flat waves-effect waves-red red-text" %>
            </div>
          </div>

        </div>  <!-- Card content -->

      </div>
    </div>
  </div>
</div>