<div class="card hoverable">
  <div class="card-content">
    <span class="card-title">
      <i class="material-icons left">schedule</i>
      Ending soon
      <!-- Dots Dropdown -->
      <a class="dropdown-button right" href="#!" data-activates="dropdown-supplies-ending" data-constrainwidth="false"><i class="material-icons black-text">more_vert</i></a>

      <!-- Dropdown Structure -->
      <ul id="dropdown-supplies-ending" class="dropdown-content" style="min-width: 150px;">

        <!-- Export button -->
        <li><a href="#"><i class="material-icons left">import_export</i>Export</a></li>

      </ul>


    </span>

    <table class="highlight">

      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
        </tr>
      </thead>

      <tbody>
        <% @supplies_ending.each do |supply| %>
          <tr>
            <td><%= supply.name %></td>
            <td><%= supply.description %></td>
            <td><%= supply.quantity %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>