<div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper container">

      <!-- Logo -->
      <%= link_to root_path , class: 'brand-logo' do %>
        <i class="material-icons left">dashboard</i>
        Boxes
      <% end %>

      <a href="#" data-activates="mobile" class="button-collapse"><i class="material-icons">menu</i></a>

      <!-- Desktop menu -->
      <ul class="right hide-on-med-and-down">

        <!-- If user logged in display log out button -->
        <% if current_user %>
          <li>
            <i class="material-icons left">account_circle</i>
            <%= current_user.email %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="material-icons left">exit_to_app</i>
              Sign Out
            <% end %>
          </li>

        <!-- Else display login & about buttons -->
        <% else %>

          <!-- Login button -->
          <li>
            <%= link_to new_user_session_path do %>
              <i class="material-icons left">account_circle</i>
              Sign in
            <% end %>
          </li>

          <!-- About button -->
          <li>
            <%= link_to about_path do %>
              <i class="material-icons left">info</i>
              About
            <% end %>
          </li>
        </ul>

        <% end %>  <!-- end if -->

      <!-- Hamburger(mobile) menu -->
      <ul class="side-nav" id="mobile">

        <!-- Login button in Hamburger menu -->
        <li><%= link_to "Sign in", new_user_session_path %></li>

        <!-- About button in Hamburger menu -->
        <li><%= link_to "About", about_path %></li>
      </ul>

    </div>
  </nav>
</div>

<script>
  $(document).ready(function() {
    $(".button-collapse").sideNav(); // Hamburger menu trigger
  });
</script>