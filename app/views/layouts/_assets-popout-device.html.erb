<!-- Supplies table -->
<div class="row">
  <div class="col s12">
    <% if @device_supplies.any? %>
      <ul class="collapsible popout left-align" data-collapsible="expandable">
        <li>
          <div class="collapsible-header active">
            <i class="material-icons">web_asset</i>
            Assigned Supplies
            <span class="right"><%= @device_supplies.count %></span>
          </div>

          <div class="collapsible-body" style="margin-left: 20px; margin-right: 20px;">

            <%= table_for_supplies(@device_supplies) %>

          </div>
        </li>
      </ul>
    <% end %>
  </div>
</div>