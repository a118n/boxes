<div class="container center-align" style="max-width: 500px;">
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey lighten-5 z-depth-2">

        <!-- Card Content -->
        <div class="card-content">

          <!-- Card Title -->
          <div class="row">
            <span class="card-title" style="font-size: 2.5em; padding-bottom: 15px;">Forgot your password?</span>
          </div>

        </div>  <!-- Card Content -->

        <div class="container">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <!-- Email field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, autofocus: true, class: "validate" %>
                <%= f.label :email %>
              </div>
            </div>

            <!-- Card Actions -->
            <div class="card-action">

              <!-- Reset password button -->
              <button class="btn waves-effect waves-light">
                <%= f.submit "Reset password" %>
              </button>
            </div>  <!-- Card Actions -->

          <% end %>  <!-- Form end -->
        </div>

        <!-- Devise shared links -->
        <div class="row" style="padding-bottom: 20px;">
          <div class="col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>