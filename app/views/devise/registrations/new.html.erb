<div class="container center-align" style="max-width: 500px;">
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey lighten-5 z-depth-2" style="margin-top: 60px; margin-bottom: 60px;">

        <div class="card-content">

          <div class="row">
            <span class="card-title" style="font-size: 2.5em;">Sign Up</span>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <!-- Email field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, autofocus: true, class: "validate" %>
                <%= f.label :email %>
              </div>
            </div>

            <!-- Password field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password, autocomplete: "off" %>
                <%= f.label :password, "Password (6 characters minimum)" %>
              </div>
            </div>

            <!-- Password confirmation field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
                <%= f.label :password_confirmation %>
              </div>
            </div>
        </div>

        <div class="card-action">

          <!-- Sign up button -->
          <button class="btn waves-effect waves-light" type="submit" name="action">
            <%= f.submit "Sign up" %>
          </button>

          <% end %>

        </div>

        <!-- <%= render "devise/shared/links" %> -->

      </div>
    </div>
  </div>
</div>