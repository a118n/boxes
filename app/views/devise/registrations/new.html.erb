<div class="row">
  <div class="col s12">
    <div class="card hoverable">
      <div class="card-content">

        <i class="material-icons left">face</i>

        <!-- Card Title -->
        <span class="card-title">New User</span>

        <!-- Form container-->
        <div class="container">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <!-- First & Last name fields -->
            <div class="row">
              <!-- First name -->
              <div class="input-field col s6">
                <i class="material-icons prefix">text_fields</i>
                <%= f.text_field :first_name, required: true, autofocus: true %>
                <%= f.label :first_name %>
              </div>

              <!-- Last name -->
              <div class="input-field col s6">
                <%= f.text_field :last_name, required: true %>
                <%= f.label :last_name %>
              </div>
            </div>

            <!-- Email field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">mail_outline</i>
                <%= f.email_field :email, required: true, class: "validate" %>
                <%= f.label :email %>
              </div>
            </div>

            <!-- Password field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password, required: true, autocomplete: "off" %>
                <%= f.label :password, "Password (6 characters minimum)" %>
              </div>
            </div>

            <!-- Password confirmation field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password_confirmation, required: true, autocomplete: "off" %>
                <%= f.label :password_confirmation %>
              </div>
            </div>

            <!-- Buttons -->
            <div class="row">
              <div class="col s12">

                <!-- Create button -->
                <button class="btn waves-effect waves-light">
                  <%= f.submit "Create" %>
                </button>

                <!-- Back button -->
                <%= link_to "Back", :back, class: "btn btn-flat waves-effect waves-light" %>
              </div>
        <% end %>  <!-- Form end -->
      </div>
    </div>
  </div>
</div>