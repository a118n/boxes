<div class="container center-align" style="max-width: 500px;">
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey lighten-5 z-depth-2" style="margin-top: 60px; margin-bottom: 60px;">

        <!-- Card Content -->
        <div class="card-content">

          <!-- Card Title -->
          <div class="row">
            <span class="card-title" style="font-size: 2.5em; padding-bottom: 15px;">Sign Up</span>
          </div>

        </div>  <!-- Card Content -->

        <div class="container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <!-- Email field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, autofocus: true, class: "validate" %>
                <%= f.label :email %>
              </div>
            </div>

            <!-- Password field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password, autocomplete: "off" %>
                <%= f.label :password, "Password (6 characters minimum)" %>
              </div>
            </div>

            <!-- Password confirmation field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
                <%= f.label :password_confirmation %>
              </div>
            </div>

            <!-- Card Actions -->
            <div class="card-action">

              <!-- Sign up button -->
              <button class="btn waves-effect waves-light" style="margin-top: 10px; margin-bottom: 10px;">
                <%= f.submit "Sign up" %>
              </button>
            </div>

          <% end %>  <!-- Form end -->
        </div>

        <!-- Devise shared links -->
        <div class="row" style="padding-bottom: 20px;">
          <div class="col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>