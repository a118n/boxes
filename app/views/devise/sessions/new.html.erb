<div class="container center-align" style="max-width: 500px;">
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey lighten-5 z-depth-2">

        <!-- Card Content -->
        <div class="card-content">

          <!-- Card Title -->
          <div class="row">
            <span class="card-title" style="font-size: 2.5em; padding-bottom: 15px;">Sign In</span>
          </div>

        </div>  <!-- Card Content -->

        <div class="container">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| -%>

            <!-- Email field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, autofocus: true, class: "validate" %>
                <%= f.label :email %>
              </div>
            </div>

            <!-- Password field -->
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password, autocomplete: "off" %>
                <%= f.label :password %>
              </div>
            </div>

            <!-- Remember me checkbox -->
            <div class="row">
              <div class="input-field col s12">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>

            <div class="card-action">
              <!-- Sign in button -->
              <button class="btn waves-effect waves-light">
                <%= f.submit "Sign in" %>
              </button>
            </div>

          <% end %>  <!-- Form end -->
        </div>

        <!-- Devise shared links -->
        <div class="row" style="padding-bottom: 20px;">
          <div class="col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>