<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">

        <i class="material-icons left">settings</i>

        <!-- Card title -->
        <span class="card-title">Settings</span>

        <div class="container">

          <%= form_for @settings, url: settings_path do |f| %>

            <!-- Notifications switch -->
            <div class="row">
              <div class="input-field col s6 offset-s3">
                <!-- Switch -->
                <div class="switch" style="margin-bottom: 50px; margin-top: 30px;">
                  <label>
                    Notifications
                    <%= f.check_box :notifiable %>
                    <span class="lever"></span>
                  </label>
                </div>
              </div>
            </div>

            <!-- Primary site -->
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :primary_site, class: "active" %>
                <%= f.collection_select(:primary_site, Site.all, :id, :name, include_blank: "None") %>
                <h6 class="grey-text">(Select to display overview information for this site only)</h6>
              </div>
            </div>

            <!-- Overview limit -->
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :overview_limit, class: "active" %>
                <%= f.select :overview_limit, [5, 10, 15, 30], include_blank: "None" %>
                <h6 class="grey-text">(Limits displayed supplies)</h6>
              </div>
            </div>

            <!-- Time zone -->
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :time_zone, class: "active" %>
                <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all %>
                <!-- <h6 class="grey-text">(Select your time zone)</h6> -->
              </div>
            </div>

            <!-- Buttons -->
            <div class="row">
              <div class="col s12">

                <!-- Update button -->
                <button class="btn waves-effect waves-light">
                  <%= f.submit "Save" %>
                </button>
              </div>
            </div>

          <% end %>
        </div>  <!-- Form container -->
      </div>  <!-- Card content -->
    </div>  <!-- Card -->
  </div>  <!-- Col -->
</div>  <!-- Row -->