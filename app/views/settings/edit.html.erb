<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">

        <i class="material-icons left">settings</i>

        <!-- Card title -->
        <span class="card-title">Settings</span>

        <div class="container">

          <%= form_for @settings, url: settings_path do |f| %>

            <!-- Notifications switch -->
            <div class="row">
              <div class="input-field col s6 offset-s3">
                <!-- Switch -->
                <div class="switch" style="margin-bottom: 50px; margin-top: 30px;">
                  <label>
                    Notifications
                    <%= f.check_box :notifiable %>
                    <span class="lever"></span>
                  </label>
                </div>
              </div>
            </div>

            <!-- Primary site -->
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :primary_site, class: "active" %>
                <%= f.collection_select(:primary_site, Site.all, :id, :name, include_blank: "None") %>
                <!-- f.select :primary_site Site.all.collect { |u| [u.name, u.id] } -->
              </div>
            </div>

            <!-- Buttons -->
            <div class="row">
              <div class="col s12">

                <!-- Update button -->
                <button class="btn waves-effect waves-light">
                  <%= f.submit "Save" %>
                </button>
              </div>
            </div>


          <% end %>
        </div>  <!-- Form container -->

      </div>  <!-- Card content -->

    </div>  <!-- Card -->
  </div>  <!-- Col -->
</div>  <!-- Row -->