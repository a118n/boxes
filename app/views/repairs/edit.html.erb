<div class="row">
  <div class="col s12">
    <div class="card hoverable">
      <div class="card-content">

        <i class="material-icons left">build</i>

        <!-- Card title -->
        <span class="card-title"><%= @device.name %> - Edit Repair</span>

        <div class="container">

          <%= form_for [@site, @device, @repair] do |f| %>

            <!-- Status -->
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :status, class: "active" %>
                <%= f.select :status, Repair.statuses.keys[0..1] %>
              </div>
            </div>

            <!-- Description -->
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :description, class: "active" %>
                <%= f.text_field :description, required: true %>
              </div>
            </div>

            <!-- Buttons -->
            <div class="row">
              <div class="col s12">

                <!-- Create button -->
                <button class="btn waves-effect waves-light">
                  <%= f.submit "Save" %>
                </button>

                <!-- Back button -->
                <%= link_to "Back", site_device_path(@site, @device), class: "btn btn-flat waves-effect waves-light" %>
              </div>
            </div>  <!-- Buttons -->

          <% end %>

        </div>  <!-- Form container -->
      </div>  <!-- Card content -->
    </div>  <!-- Card -->
  </div>  <!-- Col -->
</div>  <!-- Row -->
