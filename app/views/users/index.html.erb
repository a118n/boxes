<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">

        <i class="material-icons left">face</i>

        <!-- Card title -->
        <span class="card-title">All Users</span>

        <table class="highlight">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Account Type</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.roles.pluck(:name)[0].capitalize %></td>
                <td>
                  <a class="dropdown-button right" href="#!" data-activates="dropdown-user-<%= user.id %>" data-constrainwidth="false">
                    <i class="material-icons black-text">more_vert</i>
                  </a>

                  <!-- Dropdown Structure -->
                  <ul id="dropdown-user-<%= user.id %>" class="dropdown-content" style="min-width: 170px;">

                    <!-- Edit user button-->
                    <li>
                      <%= link_to edit_users_admin_path(user) do %>
                        <i class="material-icons left">edit</i>
                        Edit
                      <% end %>
                    </li>

                  </ul>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>  <!-- Card content -->
    </div>  <!-- Card -->
  </div>  <!-- Col -->
</div>  <!-- Row -->

<div class="fixed-action-btn tooltipped" style="bottom: 45px; right: 24px;" data-position="left" data-delay="50" data-tooltip="Add User">
  <%= link_to new_user_registration_path, class: "btn-floating btn-large red" do %>
    <i class="large material-icons">add</i>
  <% end %>
</div>
