<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">

        <i class="material-icons left">assessment</i>

        <!-- Card title -->
        <span class="card-title">Supplies Usage Reports</span>

        <form>
          <div class="row">
            <!-- Site Select -->
            <div class="input-field col s4">
              <%= collection_select(:site_id, :site_id, @sites, :id, :name, selected: @site) %>
            </div>
            <!-- Month Select -->
            <div class="input-field col s4">
              <%= select_month(Date.today, prefix: "report_date") %>
            </div>
            <!-- Year Select -->
            <div class="input-field col s4">
              <%= select_year(Date.today, prefix: "report_date", start_year: @start_year, end_year: Date.today.year) %>
            </div>
          </div>
          <!-- Submit Button -->
          <div class="row">
            <div class="col s12">
              <%= submit_tag "View Report", class: "btn waves-effect waves-light" %>
            </div>
          </div>
          <br>
        </form>

        <% if params[:report_date] %>

          <% if @versions.try(:any?) %>

            <!-- Pie Chart -->
            <div class="row">
              <div class="col s12">
                <%= pie_chart @pie_chart_data %>
              </div>
            </div>

            <!-- Table -->
            <div class="row">
              <div class="col s12">
              <table class="highlight">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Vendor</th>
                    <th>Description</th>
                    <th>Site</th>
                    <th>Used</th>
                  </tr>
                </thead>
                <tbody>
                  <% @versions.each do |version| %>
                    <tr>
                      <td><%= link_to version.supply.name, site_supply_path(version.supply.site, version.supply) %></td>
                      <td><%= version.supply.vendor %></td>
                      <td><%= version.supply.description %></td>
                      <td><%= link_to version.supply.site.name, site_path(version.supply.site) %></td>
                      <td><%= version.used %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              </div>
            </div>
          <% else %>
            <!-- Nothing -->
            <div class="row">
              <div class="col s12">
                <h5 style="font-size: 1.3em;">Nothing found for <%= @month_name %> <%= @year %> in <%= @site_name %></h5>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
