<% if @sites.any? %>

  <div class="row">
    <div class="col s12">
      <h5>All Sites</h5>
    </div>
  </div>

  <div class="row">
    <%= render 'layouts/overview-ending-soon' %>
    <%= render 'layouts/overview-most-used' %>
  </div>

  <div class="row">
    <%= render 'layouts/overview-in-repair' %>
  </div>

  <div class="row">
    <%= render 'layouts/overview-sites' %>
    <%= render 'layouts/overview-total' %>
  </div>

<% else %>
  <div class="row">
    <%= render 'layouts/overview-welcome' %>
  </div>
<% end %>